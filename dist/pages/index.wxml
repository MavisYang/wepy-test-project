
  <view class="container">
    <view class="userInfo-view">
      <button  wx:if="{{!hasUserInfo&&canIUse}}" open-type="getUserInfo" type="primary" bindgetuserinfo="getUserInfo">获取信息</button>
        <view  wx:else class="userinfo">
          <image class="userinfo-avatar" src="{{ userInfo.avatarUrl }}" background-size="cover"/>
          <view class="userinfo-nickname">{{ userInfo.nickName }}</view>
        </view>
    </view>
    <view class="swipper-view">
      <view class="headTitle textCenter">- 每周微任务 -</view>
      <swiper class="swiper-tab" autoplay="{{true}}">
         <block wx:for="{{imgUrls}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <swiper-item bindtap="handleSwiper" data-wpyhandleswiper-a="{{item.id}}" data-wpyhandleswiper-b="{{item.pic}}">
             <view class="swiper-item-view"> <image src="{{item.pic}}"/></view>
            </swiper-item>
          </block>
       
      </swiper>
    </view>
    
    <view class="countDown-view">
      <view  wx:if="{{$CountDown$typeTime ==1}}">
        <text>{{$CountDown$downTime[0]}}</text>:<text>{{$CountDown$downTime[1]}}</text>:<text>{{$CountDown$downTime[2]}}</text>
      </view>
      <view  wx:elif="{{$CountDown$typeTime ==2}}">
        <text>{{$CountDown$downTime}}</text>
      </view>
       <view wx:else>{{'00:00:00'}}</view>
    </view>

    
    <view class="countDown-view">
      <view  wx:if="{{$CountDown1$typeTime ==1}}">
        <text>{{$CountDown1$downTime[0]}}</text>:<text>{{$CountDown1$downTime[1]}}</text>:<text>{{$CountDown1$downTime[2]}}</text>
      </view>
      <view  wx:elif="{{$CountDown1$typeTime ==2}}">
        <text>{{$CountDown1$downTime}}</text>
      </view>
       <view wx:else>{{'00:00:00'}}</view>
    </view>

  </view>